<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Gui.MainWindow"
        Title="Chess" Width="640" Height="700">

    <StackPanel>
        <TextBlock Name="TurnLabel"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="0, 10"
                   Text="Ход белых"/>

        <UniformGrid Name="BoardGrid"
                     Columns="8"
                     Rows="8"
                     Width="600"
                     Height="600"
                     HorizontalAlignment="Center"/>
    </StackPanel>
</Window>